<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<%= link_to portfolio_show_path(portfolio_item.id) do %>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%>
<% end %>
<p><%= link_to "Edit", edit_portfolio_path(portfolio_item.id)  if logged_in?(:site_admin) %></p>
<p>
  <td><%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }  if logged_in?(:site_admin) %></td>
</p>
