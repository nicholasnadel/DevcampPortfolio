  
<h1>Portfolio Items</h1>
<%= link_to "Create new portfolio_item", new_portfolio_path %>
<% @portfolio_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= link_to portfolio_show_path(portfolio_item.id) do %>
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%>
  <% end %>
  <p><%= link_to "Edit", edit_portfolio_path(portfolio_item.id) %></p>
  <p><td><%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></td></p>

<% end %>